{
  "version": 2,
  "name": "pos-system",
  
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist" 
      }
    },
    {
      "src": "backend/src/main.ts",
      "use": "@vercel/node"
    }
  ],
  
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/main.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ],
  
  "functions": {
    "backend/src/main.ts": {
      "maxDuration": 30 
    }
  },
  
  
  "env": {
    "NODE_ENV": "production"
  }
}
